<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTrainer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TrainerComments" class="control-label"></label>
                <input asp-for="TrainerComments" class="form-control" />
                <span asp-validation-for="TrainerComments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StopSelfFeedback" class="control-label"></label>
                <input asp-for="StopSelfFeedback" class="form-control" />
                <span asp-validation-for="StopSelfFeedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartSelfFeedback" class="control-label"></label>
                <input asp-for="StartSelfFeedback" class="form-control" />
                <span asp-validation-for="StartSelfFeedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContinueSelfFeedback" class="control-label"></label>
                <input asp-for="ContinueSelfFeedback" class="form-control" />
                <span asp-validation-for="ContinueSelfFeedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommentsSelfFeedback" class="control-label"></label>
                <input asp-for="CommentsSelfFeedback" class="form-control" />
                <span asp-validation-for="CommentsSelfFeedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexTrainer">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
