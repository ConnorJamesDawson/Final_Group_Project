    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PersonalTracker</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StopSelfFeedback)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StopSelfFeedback)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartSelfFeedback)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartSelfFeedback)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContinueSelfFeedback)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContinueSelfFeedback)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CommentsSelfFeedback)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CommentsSelfFeedback)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Spartan)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Spartan.UserName)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Trainee"))
    {
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a asp-action="Index">Back to my Trainee Trackers</a>
    }
    
    @if (User.IsInRole("Trainer"))
    {
        <a asp-action="EditTrainer" asp-route-id="@Model.Id">Add Comments</a> 
        <a asp-action="IndexTrainer">Back to all Trainee Trackers</a>
    }
</div>

