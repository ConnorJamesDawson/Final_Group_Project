@model Final_Project.Models.PersonalTracker

@{
    ViewData["Title"] = "Delete";
}

<div class="container-xxl page-header page-header-trainee-profile" style="background-color: #e23565; margin-bottom: 1em!important;">
    <div class="container text-center">
        <h1 class="text-white animated zoomIn mb-3">Delete: @Html.DisplayFor(model => model.Title)</h1>
        <p class="lead text-white">Are you sure you want to delete this Personal Tracker entry?</p>
    </div>
</div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StopSelfFeedback)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StopSelfFeedback)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartSelfFeedback)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartSelfFeedback)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContinueSelfFeedback)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContinueSelfFeedback)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CommentsSelfFeedback)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CommentsSelfFeedback)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TechnicalSkills)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TechnicalSkills)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConsultantSkills)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConsultantSkills)
        </dd>
        @if (User.IsInRole("Admin")){
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Spartan)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Spartan.Id)
        </dd>
        }

        @if (User.IsInRole("Trainee")){
        <dt class = "col-sm-2" style="display:none">
            @Html.DisplayNameFor(model => model.Spartan)
        </dt>

        <dd class = "col-sm-10" style="display:none">
            @Html.DisplayFor(model => model.Spartan.Id)
        </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" role="button" class="btn btn-dark">Back to List</a>
    </form>
